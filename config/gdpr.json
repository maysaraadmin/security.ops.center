{
    "standard": "GDPR",
    "version": "1.0",
    "description": "General Data Protection Regulation (GDPR) Compliance Template",
    "requirements": [
        {
            "id": "GDPR-ART-5",
            "description": "Data processing principles",
            "controls": [
                "lawfulness_fairness_transparency",
                "purpose_limitation",
                "data_minimization",
                "accuracy",
                "storage_limitation",
                "integrity_confidentiality"
            ]
        },
        {
            "id": "GDPR-ART-6",
            "description": "Lawfulness of processing",
            "controls": [
                "consent_management",
                "contract_processing",
                "legal_obligation",
                "vital_interests",
                "public_interest",
                "legitimate_interests"
            ]
        },
        {
            "id": "GDPR-ART-15-22",
            "description": "Data subject rights",
            "controls": [
                "right_to_access",
                "right_to_rectification",
                "right_to_erasure",
                "right_to_restriction",
                "right_to_data_portability",
                "right_to_object"
            ]
        },
        {
            "id": "GDPR-ART-24-43",
            "description": "Controller and processor obligations",
            "controls": [
                "data_protection_by_design",
                "data_protection_impact_assessments",
                "data_breach_notification",
                "data_protection_officer",
                "records_of_processing_activities"
            ]
        },
        {
            "id": "GDPR-ART-44-50",
            "description": "International data transfers",
            "controls": [
                "transfer_adequacy_decision",
                "appropriate_safeguards",
                "binding_corporate_rules",
                "derogations"
            ]
        }
    ],
    "reporting_requirements": {
        "data_breach_notification": {
            "timeframe": "72 hours",
            "authority": "supervisory_authority",
            "data_subjects": true
        },
        "data_protection_impact_assessment": {
            "required_for_high_risk_processing": true,
            "documentation_required": true
        },
        "records_of_processing_activities": {
            "required": true,
            "retention_period": "duration_of_processing_plus_5_years"
        }
    },
    "audit_checks": [
        {
            "id": "GDPR-AUDIT-001",
            "description": "Data inventory and mapping",
            "verification_points": [
                "data_categories_identified",
                "processing_purposes_documented",
                "data_flows_mapped",
                "third_party_shares_identified"
            ]
        },
        {
            "id": "GDPR-AUDIT-002",
            "description": "Consent management",
            "verification_points": [
                "consent_mechanism_implemented",
                "withdrawal_process_available",
                "consent_records_maintained"
            ]
        },
        {
            "id": "GDPR-AUDIT-003",
            "description": "Data subject rights procedures",
            "verification_points": [
                "process_for_handling_requests",
                "identity_verification",
                "response_time_tracking",
                "appeals_process"
            ]
        },
        {
            "id": "GDPR-AUDIT-004",
            "description": "Security measures",
            "verification_points": [
                "encryption_in_transit",
                "encryption_at_rest",
                "access_controls",
                "incident_response_plan"
            ]
        },
        {
            "id": "GDPR-AUDIT-005",
            "description": "Vendor management",
            "verification_points": [
                "data_processing_agreements",
                "vendor_assessments",
                "subprocessor_tracking"
            ]
        }
    ]
}
