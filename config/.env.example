# Application Settings
FLASK_ENV=development
FLASK_APP=src/web/app.py
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URI=sqlite:///data/edr.db
DATABASE_TEST_URI=sqlite:///:memory:

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# EDR Configuration
EDR_AGENT_NAME=edr-agent
EDR_CHECKIN_INTERVAL=300
EDR_MAX_OFFLINE_TIME=900

# Paths (use forward slashes for cross-platform compatibility)
DATA_DIR=data
LOG_DIR=logs
RULES_DIR=config/rules
TEMP_DIR=tmp

# Security Settings
PASSWORD_HASH_METHOD=sha256
PASSWORD_SALT_ROUNDS=10
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Email Settings (for notifications)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# API Keys (replace with actual keys in production)
VIRUS_TOTAL_API_KEY=your-virustotal-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# Feature Flags
ENABLE_EDR=True
ENABLE_SIEM=True
ENABLE_NIPS=False
ENABLE_COMPLIANCE=False
